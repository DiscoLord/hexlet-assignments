<h1>Tasks</h1>

<%= link_to 'Create New Task', new_task_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Creator</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.status %></td>
        <td><%= task.creator %></td>
        <td><%= task.completed ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
